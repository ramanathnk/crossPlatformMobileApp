{
  "expo": {
    "name": "IMDRA",
    "slug": "imdra",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/SnapTrackerLogoNew1024.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "imdra",
    "splash": {
      "image": "./assets/SnapTrackerLogoNew1024.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/SnapTrackerLogoNew1024.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.kisp.imdra",
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "extraProguardRules": "-keep class com.facebook.react.** { *; }\n-keep class com.facebook.jni.** { *; }\n-keep class com.facebook.hermes.** { *; }\n-keep class com.facebook.yoga.** { *; }\n-keep class com.horcrux.svg.** { *; }\n-keep class com.swmansion.gesturehandler.** { *; }\n-keep class com.th3rdwave.safeareacontext.** { *; }\n-dontwarn com.facebook.**\n-dontwarn com.horcrux.svg.**"
          }
        }
      ],
      "expo-secure-store",
      "expo-font",
      "react-native-edge-to-edge"
    ],
    "extra": {
      "eas": {
        "projectId": "71602e3c-73c2-4558-8292-0e087065c848"
      }
    }
  }
}
